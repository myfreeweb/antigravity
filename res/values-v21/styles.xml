<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.Ag.AlertDialog" parent="android:Theme.Material.Light.Dialog.Alert">
    <item name="android:colorAccent">@color/accent_ag</item>
    <item name="android:colorPrimary">@color/accent_ag</item>
    <item name="android:colorPrimaryDark">@color/accent_darker_ag</item>
  </style>

  <style name="Theme.Ag" parent="Theme.Ag.Base">
    <item name="android:alertDialogTheme">@style/Theme.Ag.AlertDialog</item>
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
    <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
    <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
  </style>

</resources>
