<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.Ag.Button" parent="@android:style/Widget.Button">
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:shadowColor">@android:color/black</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">0</item>
    <item name="android:shadowRadius">0</item>
    <item name="android:textSize">16dip</item>
    <item name="android:textStyle">normal</item>
    <item name="android:background">@drawable/ag_button</item>
    <item name="android:focusable">true</item>
    <item name="android:clickable">true</item>
  </style>

  <style name="Theme.Ag.SmoothProgressBar" parent="SmoothProgressBar">
    <item name="spb_stroke_separator_length">4dp</item>
    <item name="spb_sections_count">4</item>
    <item name="spb_speed">1.7</item>
    <item name="spb_color">@color/accent_ag</item>
    <item name="spb_progressiveStart_activated">true</item>
  </style>

  <style name="Theme.Ag.Base" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <item name="spbStyle">@style/Theme.Ag.SmoothProgressBar</item>
    <item name="colorAccent">@color/accent_ag</item>
    <item name="colorPrimary">@color/accent_ag</item>
    <item name="colorPrimaryDark">@color/accent_darker_ag</item>
    <item name="android:buttonStyle">@style/Theme.Ag.Button</item>
    <item name="android:textColorLink">@color/accent_ag</item>
  </style>

  <style name="Theme.Ag" parent="Theme.Ag.Base">
  </style>

  <style name="Theme.Ag.Dialog" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/accent_ag</item>
  </style>

  <style name="Theme.Ag.Login.EditText" parent="@android:style/Widget.EditText">
    <item name="android:background">@drawable/ag_edit_text_login</item>
    <item name="android:textColor">@color/accent_ag</item>
    <item name="android:textCursorDrawable">@null</item>
  </style>

  <style name="Theme.Ag.Login.Button" parent="Theme.Ag.Button">
    <item name="android:textColor">@color/accent_ag</item>
    <item name="android:background">@drawable/ag_login_button</item>
  </style>

  <style name="Theme.Ag.Login" parent="Theme.Ag.Base">
    <item name="windowActionBar">false</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowTitleSize">0dp</item>
    <item name="android:windowBackground">@color/accent_ag</item>
    <item name="android:colorBackground">@color/accent_ag</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textColorLink">@android:color/white</item>
    <item name="android:editTextStyle">@style/Theme.Ag.Login.EditText</item>
    <item name="android:editTextBackground">@drawable/ag_edit_text_login</item>
    <item name="android:buttonStyle">@style/Theme.Ag.Login.Button</item>
  </style>

</resources>
